<div class="jumbotron">
        <h1 class="pull-right">
            <!-- <%= fa_icon("quote-left") %> -->
            &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; <%= fa_icon("quote-right") %>
        </h1>
        <p style="text-align: right;">
          ...blog &nbsp;
        </p>
</div>

<div class="page-header">
  <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> &nbsp;Posts </h1>
</div>


<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= post.title %></h3>
          <p>created by: <%= post.user.full_name %></p>
          <p> <%= link_to "Read the Post", post_path(post), class: "btn btn-default"%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<nav>
    <%= paginate @posts %>
</nav>
