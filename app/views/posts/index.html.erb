<div class="page-header">
  <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> &nbsp;Posts </h1>
</div>


<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="pull-right"><small>likes: </small><span class="badge"> <%=post.likes.count%> </span> <small>votes: </small> <span class="badge"> <%= post.vote_results %></span> </div>
        <div class="caption">
          <h3><%= post.title %></h3>
          <p>created by: <%= post.user.full_name %></p>
          <p> <%= link_to "Read the Post", post_path(post), class: "btn btn-default"%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<nav>
    <%= paginate @posts %>
</nav>
