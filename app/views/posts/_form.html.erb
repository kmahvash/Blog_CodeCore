<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form_group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.collection_check_boxes :label_ids, Label.order(:name), :id, :name%>
  </div>
  <div class="">
    <%= f.submit %>
  </div>
<%end  %>
