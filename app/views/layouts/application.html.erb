<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style media="screen">
    .empty-div {
      height: 20px;
    }
    .footer {
      display: inline;
      text-align: center;
      font-size: 10;
      color: #888;
      margin: auto 0;
    }
    #search {
      color: #FFF;
    }
    .jumbotron {
      line-height: 0.85;
      padding-bottom: 100px;
      margin-bottom: 10px;
    }
    .btn-lg {
      width: 250px;
    }
    .half-page {
      display: inline-block;
      width: 40%;
    }
    .dl, .dd {
      display: inline-block;
    }
  </style>
</head>
<body>
  <div class="container">


<%= render "/layouts/nav" %>

  <% if flash[:notice] %>
   <div class="alert alert-success">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
     <%= flash[:notice] %>
   </div>

  <% elsif flash[:alert] %>
   <div class="alert alert-danger">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
     <%= flash[:alert] %>
   </div>
  <% end %>

  <%= yield %>

  </div>






