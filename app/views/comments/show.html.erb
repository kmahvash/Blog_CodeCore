<h3>Your Comment</h3>

<h4><%= @comment.title %></h4>

<p>
<%= @comment.body %>
</p>

<div class="">
<%= link_to "Edit this comment", edit_comment_path, class: "btn btn-info" %>
<% if can? :destroy, @comment %>
  <%= link_to "Delete this comment", comment_path(@comment), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"}, clas: "btn btn-danger" %>
<% end %>
</div>
